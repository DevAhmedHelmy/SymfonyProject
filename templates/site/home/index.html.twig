
{% extends 'site/layouts/base.html.twig' %}

{% block body %}
      
 	<header class="jumbotron my-4">
		<h1 class="display-3">Welcome To Online Store</h1>
	
	</header>
	<div class="row text-center">
        
        {%if products is defined%}
        {% for product in products %}
        <div class="col-lg-3 col-md-6 mb-4">
        
          <div class="card">
            <img class="card-img-top" src="/image/upload/{{product.getImage()}}" alt="">
            <div class="card-body">
              <h6 class="card-title">{{product.name}}</h6>
              <p class="card-text">{{product.description}}</p>
              <p class="card-text">{{product.getSalePrice()}} L.E</p>
            </div>
            <div class="card-footer">
                <form action='{{ path('add_to_cart', {'productId': product.getId()}) }}'>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-shopping-cart"></i> Add To Cart
                    </button>
                </form>
                
            </div>
          </div>
        </div>
                     
       {% endfor %}
       {%endif%}
       
 <!-- Button trigger modal -->

      </div>
        </div>
        </div>
      

      




      </div>

{% endblock %}

  